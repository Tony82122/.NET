        padding: 40px;
        max-width: 400px;
        margin: 0 auto;
    }

    .auth-card h2 {
        margin-bottom: 12px;
    }

    .auth-card p {
        color: #818384;
        margin-bottom: 24px;
    }

    .posts-header {
        margin-bottom: 24px;
    }

    .posts-header h1 {
