@page "/"
@using ApiContracts.DTOs
@using BlazorApp1.HttpServices
@using BlazorApp1.Auth
@using BlazorApp1.HttpEntities
@inject IPostService PostService
@inject NavigationManager NavMgr
@inject IAuthProvider AuthProvider

<PageTitle>r/Forum - Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="home-container">
            <div class="feed-header">
                <h1>🔥 r/Forum</h1>
                <p>Your community, your posts</p>
            </div>

            @if (posts == null)
            {
                <div class="loading">
                    <p>Loading posts...</p>
                </div>
            }
            else if (!posts.Any())
            {
                <div class="no-posts">
                    <p>No posts yet. Be the first to post!</p>
                    <button class="btn btn-primary" @onclick="NavigateToCreate">Create Post</button>
                </div>
            }
            else
            {
                <div class="posts-feed">
                    @foreach (var post in posts)
                    {
                        <div class="post-card">
                            <div class="post-header">
                                <h3 class="post-title">@post.Title</h3>
                                <span class="post-date">@FormatDate(post.CreatedAt)</span>
                            </div>

                            @if (!string.IsNullOrEmpty(post.Body))
                            {
                                <div class="post-content">
                                    @post.Body
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(post.Content))
                            {
                                <div class="post-content">
                                    @post.Content
                                </div>
                            }

                            <div class="post-footer">
                                <div class="post-stats">
                                    <span class="upvotes">⬆️ @(post.UpVotes ?? 0)</span>
                                    <span class="downvotes">⬇️ @(post.DownVotes ?? 0)</span>
                                    <span class="comments">💬 @(post.Comments?.Count ?? 0)</span>
                                </div>
                                <div class="post-actions">
                                    <button class="action-btn">Share</button>
                                    <button class="action-btn">Save</button>
                                </div>
                            </div>

                            @if (post.Comments != null && post.Comments.Any())
                            {
                                <div class="post-comments-preview">
                                    <div class="comments-label">Top Comments:</div>
                                    @foreach (var comment in post.Comments.Take(2))
                                    {
                                        <div class="comment-preview">
                                            <strong>@comment.UserId</strong>
                                            <p>@comment.TextContent</p>
                                            <small>@FormatDate(comment.CreatedAt)</small>
                                        </div>
                                    }
                                    @if (post.Comments.Count > 2)
                                    {
                                        <div class="view-more">View @(post.Comments.Count - 2) more comments</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="login-prompt">
            <div class="prompt-card">
                <h2>Join the Community</h2>
                <p>Sign in to access r/Forum and start posting!</p>
                <button class="btn btn-primary" @onclick="NavigateToLogin">Go to Login</button>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

